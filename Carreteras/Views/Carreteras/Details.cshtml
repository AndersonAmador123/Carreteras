                    <td>
                        134
                    </td>

                </tr>
            </table>

            <div class="form-group">
                <div class="col-md-offset-10 col-md-10">
                    @Html.ActionLink("Editar", "Edit", new { id = Model.car_id }, new { @class = "btn btn-success  " }) |
                    @Html.ActionLink("Cancelar", "Index", null, new { @class = " btn btn-default" })
                </div>
            </div>
            <br />
            <h3>Auditoria</h3>
            <table class="table table-striped table-bordered table-hover   dtr-inline" id="tbl" aria-describedby="tabla_evento_info" role="grid">
                <thead>
                    <tr>

                        <th>
                            Accion
                        </th>

                        <th>
                            Usuario
                        </th>

                        <th>
                            Fecha
                        </th>

                    </tr>
                </thead>


                <tr>
