@model Carreteras.Models.tb_usuarios

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()


    <div class="ibox-content">
        <div class="container">
            <div class="form-horizontal">
                <div class="row">
                    <div class="col-md-offset-5">

                        <h1> Insertar Usuarios </h1>
                    </div>
                </div>
                <br />


                <div class="form-horizontal">

                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="col-lg-6">

                                <div class="form-group">
                                    <div class="col-md-2">
                                        <label> Empleado </label>
                                    </div> <div class="col-md-10">


                                        <select class="select2_demo_3 form-control">
                                            <option></option>
                                            <option>Jose</option>
                                            <option>Marcos</option>

                                        </select>




                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <label> Codigo </label>
                                    </div><div class="col-md-10">
                                        @Html.EditorFor(model => model.usu_id, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.usu_id, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>






                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <label> Usuario </label>
                                    </div><div class="col-md-10">
                                        @Html.EditorFor(model => model.usu_descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.usu_descripcion, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group">
                                    <div class="col-md-2">
                                        <label> Constraseña </label>
                                    </div> <div class="col-md-10">
                                        @Html.EditorFor(model => model.usu_password, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.usu_password, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <br />

                            <div class="col-md-offset-2 col-md-10">
                                <h2>Rol</h2>
                                <input id="Checkbox1" type="checkbox" />root<br />
                                <input id="Checkbox2" type="checkbox" />Admin<br />
                                <input id="Checkbox3" type="checkbox" />Soporte<br />
                                <input id="Checkbox4" type="checkbox" />invitado
                            </div>






                            <div class="form-group">
                                <div class="col-md-offset-10 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-success toolbar-item " />
                                    @Html.ActionLink("Cancelar", "Index", null, new { @class = " btn btn-default" })
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
        </div>
        </div>
        }

