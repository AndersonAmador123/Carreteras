                            @Html.DisplayFor(modelItem => item.com_descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.com_km_inicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.com_km_fin)
                        </td>

