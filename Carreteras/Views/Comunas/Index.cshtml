                            @Html.ActionLink("Detalle", "Details", new { id = item.com_id }, new { @class = "btn btn-default btn-xs" }) |
                            @Html.ActionLink("Inactivar", "Delete", new { id = item.com_id }, new { @class = "btn btn-danger btn-xs" })
