@model Carreteras.Models.tb_empleados

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="col-md-offset-5"><b>Editar Empleados</b></h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.emp_id)

        @*Primer DIV*@
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.emp_nombre, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.emp_nombre, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.emp_nombre, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.emp_telefono, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.emp_telefono, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.emp_telefono, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        @*Segundo DIV*@
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.emp_edad, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.emp_edad, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.emp_edad, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ciu_id, "ciu_id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("ciu_id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ciu_id, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <br /><br /><br />
        <div class="col-md-12">
            <div class="col-md-offset-10">
                <input type="submit" value="Guardar" class="btn btn-success toolbar-item " />|
				 @Html.ActionLink("Cancelar", "Index",null,new { @class = " btn btn-default" })
            </div>
        </div>
    </div>
}

