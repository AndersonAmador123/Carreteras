@model Carreteras.Models.tb_empleados

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>tb_empleados</h4>
    <hr />
    <div class="col-md-4">
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.emp_nombre)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.emp_nombre)
            </dd>
            <br/>
            <dt>
                @Html.DisplayNameFor(model => model.emp_telefono)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.emp_telefono)
            </dd>
</dl>
           
    </div>
    <div class="col-md-6">
        <dl class="dl-horizontal">
            
            <dt>
                @Html.DisplayNameFor(model => model.emp_edad)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.emp_edad)
            </dd>
            <br/>
            <dt>
                @Html.DisplayNameFor(model => model.tb_ciudades.ciu_descripcion)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.tb_ciudades.ciu_descripcion)
            </dd>

        </dl>
    </div>
    @*Auditoria*@
    <div class="col-md-8 col-sm-offset-1">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th>Acción</th>
                    <th>Usuario</th>
                    <th>Fecha</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>Crea</td>
                    <td>@Html.DisplayFor(model => model.tb_usuarios.usu_descripcion)</td>
                    <td>@Html.DisplayFor(model => model.emp_fecha_crea)</td>

                </tr>
                <tr>
                    <td>Modifica</td>
                    <td>@Html.DisplayFor(model => model.tb_usuarios1.usu_descripcion)</td>
                    <td>@Html.DisplayFor(model => model.emp_fecha_modifica)</td>

                </tr>
            </tbody>
        </table>
    </div>

</div>
<br /><br />
<div class="col-md-12">
    <div class="col-md-offset-8">
        <p>
            @Html.ActionLink("Editar", "Edit", new { id = Model.emp_id }, new { @class = "btn btn-success   " }) |
            @Html.ActionLink("Cancelar", "Index", null, new { @class = " btn btn-default  " })
        </p>
    </div>
</div>

